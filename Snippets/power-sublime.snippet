int power(int x,int y,int m =M)
{
	int res = 1;
	if(x==0)return 0;
	while(y>0)
	{
		if(y&1)res = (res*x)%m;
		y=y>>1;
		x = (x*x)%m;
	}
	return res;
}
]]></content>
